# Used for: PrivateCaptcha server-side verification
PRIVATECAPTCHA_SECRET_KEY=

# PrivateCaptcha - API Endpoint region
# Options: 'us', 'eu', 'asia'
# Used for: PrivateCaptcha API endpoint selection
NEXT_PUBLIC_PRIVATECAPTCHA_ENDPOINT=us

# PrivateCaptcha - Display Mode
# Options: 'widget', 'inline', 'popup'
# Used for: How PrivateCaptcha is displayed
NEXT_PUBLIC_PRIVATECAPTCHA_DISPLAY_MODE=widget

# PrivateCaptcha - Theme
# Options: 'light', 'dark', 'auto'
# Used for: PrivateCaptcha widget theme
NEXT_PUBLIC_PRIVATECAPTCHA_THEME=light

# PrivateCaptcha - Language
# Used for: PrivateCaptcha widget language
NEXT_PUBLIC_PRIVATECAPTCHA_LANG=en

# PrivateCaptcha - Start Mode
# Options: 'click', 'auto', 'focus'
# Used for: When PrivateCaptcha starts
NEXT_PUBLIC_PRIVATECAPTCHA_START_MODE=click

# CAPTCHA Provider Selection
# Options: 'turnstile', 'privatecaptcha', 'none'
# Used for: Which CAPTCHA provider to use (can be overridden in admin panel)
NEXT_PUBLIC_CAPTCHA_PROVIDER=turnstile

# CAPTCHA Rotation - Enable rotation between providers
# Used for: Rotating between multiple CAPTCHA providers
NEXT_PUBLIC_CAPTCHA_ROTATION_ENABLED=false

# CAPTCHA Rotation - Providers to rotate
# Format: comma-separated list (e.g., "turnstile,privatecaptcha")
# Used for: Which providers to rotate between
NEXT_PUBLIC_CAPTCHA_ROTATION_PROVIDERS=turnstile,privatecaptcha

# CAPTCHA Rotation - Rotation method
# Options: 'session-based', 'time-based', 'random'
# Used for: How to rotate between providers
NEXT_PUBLIC_CAPTCHA_ROTATION_METHOD=session-based

# CAPTCHA Rotation - Shuffle interval (seconds)
# Used for: How often to shuffle providers (time-based method)
NEXT_PUBLIC_CAPTCHA_ROTATION_INTERVAL=60

# ============================================================
# üåê NETWORK RESTRICTIONS (OPTIONAL)
# ============================================================

# Allow VPN connections
# Options: 'true', 'false', '1', '0'
# Used for: Allowing/blocking VPN users
# ‚ö†Ô∏è Recommended: false for production (stricter security)
ALLOW_VPN=false

# Allow Proxy connections
# Options: 'true', 'false', '1', '0'
# Used for: Allowing/blocking proxy users
# ‚ö†Ô∏è Recommended: false for production (stricter security)
ALLOW_PROXY=false

# Allow Datacenter IPs
# Options: 'true', 'false', '1', '0'
# Used for: Allowing/blocking datacenter IPs
# ‚ö†Ô∏è Recommended: false for production (stricter security)
ALLOW_DATACENTER=false

# ============================================================
# üîí SECURITY MODE (OPTIONAL)
# ============================================================

# Link security mode
# Options: 'strict', 'hardened'
# Used for: Token security level
# - strict: Standard security (default)
# - hardened: Enhanced security with millisecond-window expiry
LINK_SECURITY_MODE=strict

